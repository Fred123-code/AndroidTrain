<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kstudy.carapp">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <uses-feature android:glEsVersion="0x00020000" android:required="true" />

    <application
        android:name=".CarApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AndroidTrain">
        <activity
            android:name=".CarMainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".screen.ScreenMainActivity" android:exported="true" />
        <activity android:name=".screen.ScreenSecondActivity" android:exported="true" />
        <activity android:name=".screen.ScreenThirdActivity" android:exported="true" />
        <activity android:name=".monitor.MonitorNetActivity" android:exported="true" />
        <service android:name=".screen.ScreenService" android:foregroundServiceType="mediaProjection"/>

    </application>

</manifest>